[mysqld]
user=root
bind-address=0.0.0.0
port={{ db_port }}
datadir=/tmp/mysql
socket=/tmp/mysql.sock
log-error=/tmp/mysqld.log
pid-file=/tmp/mysqld.pid

# Performance and tuning
max_connections=200
innodb_buffer_pool_size=1G
innodb_log_file_size=256M

[client]
port={{ db_port }}
socket=/tmp/mysql.sock
